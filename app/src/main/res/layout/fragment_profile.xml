                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/dark_greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                    </RelativeLayout>

                </LinearLayout>

