<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sh"
    android:padding="@dimen/_6sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/imgSl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/togo_cart_icon"
                    android:id="@+id/productImg"/>

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_back"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="start"
                    android:background="@color/transparent"
                    android:tint="@color/black"
                    android:layout_margin="@dimen/_15sdp"/>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/relLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_below="@id/imgSl">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@id/productName"
                    android:id="@+id/productQuentity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/dark_greay"/>

                <TextView
                    android:id="@+id/addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/green"
                    android:layout_below="@id/productQuentity"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/green_outline"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"
                    android:text="ADD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:layout_toLeftOf="@id/addBtn"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_below="@id/productQuentity">

                    <TextView
                        android:layout_below="@id/productName"
                        android:id="@+id/productSellingPrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12ssp"
                        android:text="₹230"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@id/productName"
                        android:id="@+id/productMRP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12ssp"
                        android:text="₹280"
                        android:layout_marginLeft="@dimen/_9sdp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/dark_greay"/>

                    <TextView
                        android:id="@+id/discountPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20% 0FF"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:background="@drawable/discount_bg"
                        android:textSize="@dimen/_8ssp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/relLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product details"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubic"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/rubic"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@id/productName"
                    android:id="@+id/productDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/dark_greay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/rubic"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@id/productName"
                    android:id="@+id/productQuentityUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/dark_greay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/rubic"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@id/productName"
                    android:id="@+id/productCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/dark_greay"/>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>