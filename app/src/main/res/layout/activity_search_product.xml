<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.SearchProductActivity">

    <RelativeLayout
        android:id="@+id/rel"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_centerVertical="true"
            android:tint="@color/black"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_toRightOf="@id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/search">

            <RelativeLayout
                android:id="@+id/src"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_6sdp"
                android:padding="@dimen/_3sdp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:focusable="true"
                    android:theme="@style/ThemeOverlay.SearchView"
                    app:iconifiedByDefault="false"
                    app:searchHintIcon="@color/green"
                    app:goIcon="@color/green"
                    app:searchIcon="@null"
                    tools:queryHint="Search Dal, Rice, etc.">
                    <requestFocus/>
                </androidx.appcompat.widget.SearchView>


                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/clear"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clear"
                    android:layout_gravity="end"
                    android:layout_centerVertical="true"
                    android:tint="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_6sdp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/goToCart"
        android:layout_below="@id/rel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/trendingRelativeL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/trendingTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trending"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:drawableStart="@drawable/ic_trending"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableTint="@color/black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/trendingTv"
                    android:id="@+id/recyclearCategories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_8sdp"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:spanCount="4"
                    tools:listitem="@layout/row_category" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/rel"
                android:padding="@dimen/_4sdp"
                android:id="@+id/recyclearProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/row_products"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/goToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/green"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_6sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp">

            <TextView
                android:id="@+id/totalItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_alignParentStart="true"
                android:text="7 items"
                android:layout_marginLeft="@dimen/_4sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_below="@id/totalItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="â‚¹927"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View cart"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                android:drawablePadding="@dimen/_6sdp"
                android:drawableEnd="@drawable/ic_arrow_right_"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        android:indeterminateTint="@color/green"
        android:visibility="gone" />


</RelativeLayout>